<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd">
    <!-- 使用 context 命名空间 ,在配置文件中开启相应的注解处理器 -->
    <context:component-scan base-package="com.it" />
<!--    <context:property-placeholder location="classpath:/myConfig.properties"/>-->
    <!-- 将指定类配置给Spring，让Spring创建HelloSpring对象的实例 -->

    <bean id="user" class="com.it.vo.User">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="123"/>
        <constructor-arg name="password" value="456"/>
    </bean>

    <bean id="user2" class="com.it.vo.User">
        <property name="password" value="456"/>
        <property name="name" value="123"/>
        <property name="id" value="1"/>
    </bean>

    <bean id="userDao" class="com.it.dao.impl.UserDaoImpl"/>
    <bean id="userService" class="com.it.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>
</beans>

